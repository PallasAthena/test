<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout android:id="@+id/news_frag"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical">
        <TextView android:id="@+id/content_title_frag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#698B22"

            android:padding="8sp"
            android:layout_gravity="center_vertical"
            android:textSize="30sp"/>
        <ImageView android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/cutting_line_horizontal"  />
        <TextView android:id="@+id/content_detail_frag"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#698B22"
            android:padding="1dp"
            android:textSize="15sp"/>

    </LinearLayout>

    <ImageView android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/news_frag"
        android:src="@drawable/cutting_line_vertical"
        android:padding="2dp"/>

</RelativeLayout>